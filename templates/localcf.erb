# These values can be overridden by editing ~/.spamassassin/user_prefs.cf
# (see spamassassin(1) for details)

# These should be safe assumptions and allow for simple visual sifting
# without risking lost emails.

required_score <%= @required_score %>
report_safe <%= scope.function_bool2number([@report_safe]) %>
rewrite_header <%= @rewrite_header %>

use_pyzor <%= scope.function_bool2number([@use_pyzor]) %>

skip_rbl_checks <%= scope.function_bool2number([@skip_rbl_checks]) %>
rbl_timeout <%= @rbl_timeout %>

use_bayes <%= scope.function_bool2number([@use_bayes]) %>
use_bayes_rules <%= scope.function_bool2number([@use_bayes_rules]) %>
bayes_auto_learn <%= scope.function_bool2number([@bayes_auto_learn]) %>
bayes_auto_learn_threshold_spam <%= @bayes_auto_learn_threshold_spam %>

